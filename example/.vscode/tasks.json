{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "build for debug",
            "command": "gcc",
            "args": [
                "-std=gnu11",
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "debug task for C(gnu11)"
        }
    ]
}
